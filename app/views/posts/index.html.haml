.search_screen
  = form_with(url: posts_searches_path, local: true, method: :get, class: "search_container") do |form|
    = form.text_field :keyword, placeholder: "投稿を検索", class: "search-input"
    = form.submit "検索", class: "search-btn"
.postspage
  .popular-tags
    .popular-tags__lists
      人気のタグ
    .popular-tags__items
      - @tags.each do |tag|
        = link_to tag, posts_path(tag_name: tag.name),class: "tags--item popular-tags__items--parts"
  .postspage__main
    投稿一覧
  .postspage__content
    = render partial: "post"
= paginate(@posts)
