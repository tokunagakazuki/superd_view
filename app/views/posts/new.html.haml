.formpage
  = form_with model: @post ,local: true do |f|
    .formpage_content
      .formpage_content__title
        タイトル
        %br
        = f.text_field :title
      .formpage_content__title
        画像投稿
        %br
        %label
          .image-file
            ファイルを選択
            = f.file_field :image, class: 'hidden'
      .formpage_content__description
        説明
        %br
        = f.text_area :description
      -#  #タグ入力フォームを追加
      .form-group 
        = f.label :tag_list
        = f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control"
      .formpage_content__btn
        = f.submit '投稿する'